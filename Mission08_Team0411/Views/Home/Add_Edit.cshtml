@{
}

@model ToDo

<h1>@ViewData["Task"]</h1>

<form asp-action="Create" method="post">
    <!--Hiding our CategoryId during display-->
    <input type="hidden" asp-for="CategoryId" />

    <!--Task-->
    <div>
        <label asp-for="TaskName">Task:</label>
        <input type="text" asp-for="TaskName" required />
    </div>
    <br />

    <!--Due Date-->
    <div>
        <label asp-for="DueDate">Due Date:</label>
        <input type="date" asp-for="DueDate"/>
    </div>

    <!--Quadrant-->
    <div>
        <label asp-for="Quadrant">Quadrant:</label>
        <input type="number" asp-for="Quadrant" required />
    </div>
    <br />

    <!--Completed-->
    <div>
        <label>Completed:</label><br />
        <input type="radio" asp-for="Completed" value="true" id="completedYes" />
        <label for="completedYes">Yes</label>
        <input type="radio" asp-for="Completed" value="false" id="completedNo" />
        <label for="completedNo">No</label>
    </div>
    <br />

    <!--Category-->
    <div>
        <label asp-for="CategoryId">Category:</label>
        <select asp-for="CategoryId">
            <option value="">Select Category</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId" >
                    @c.CategoryName
                </option>   
            }
        </select>
    </div>

    <!-- Dynamic submit button -->
    <button type="submit">@ViewData["ButtonText"]</button>
  
    <div asp-validation-summary="All"></div>
</form>
